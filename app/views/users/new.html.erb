<%= form_for(@user) do |f| %>
<%= f.label :email, 'Email' %>
 <%= f.email_field :email%><br />
 <%= f.label :username, 'Username' %>
 <%= f.text_field :username%><br />
 <%= f.label :password, 'Password' %>
 <%= f.password_field :password%><br />
 <%= f.label :password_confirm, 'Password Confirmation'%>
 <%= f.password_field :password_confirm%><br />
 <%= f.submit "Sign Up!" %>

<% end%>